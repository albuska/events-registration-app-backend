{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES6"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true}
}